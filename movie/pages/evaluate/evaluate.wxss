/* pages/evaluate/evaluate.wxss */
/* 影片信息样式 */
.detail {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.detail-main {
  width: 100%;
  height: 400rpx;
  /* 实现毛玻璃效果 */
  filter: blur(40rpx);
  opacity: .4;
}
.detail-dialog {
  width: 100%;
  height: 400rpx;
  background: #333;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-info {
  width: 100%;
  height: 400rpx;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
}
.detail-img {
  width: 276rpx;
  height: 90%;
  margin-left: 18rpx;
  margin-top: 19rpx;
  border-radius: 8rpx;
}
.detail-msg {
  flex: 1;
  padding: 20rpx;
}

.detail-title {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  line-height: 2;
  /* 固定宽度 */
  width: 400rpx;
  /* 一行展示 */
  white-space: nowrap;
  /* 溢出隐藏 */
  overflow: hidden;
  /* 文本隐藏变成省略号 */
  text-overflow: ellipsis;
}
.detail-tips {
  color: #fff;
  line-height: 2;
}
.detail-score {
  font-size: 34rpx;
  line-height: 2;
  font-weight: 600;
  color: orange;
}
.detail-country {
  color: #fff;
  line-height: 2;
}
.detail-role {
  color: #fff;
  line-height: 2;
}
.detail-container {
  font-size: 25rpx;
  color: #31303094;
  height: 220rpx;
}
/* 评分样式 */
.detail-mark {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 338rpx;
}
.star text {
  color: #ccc;
  font-size: 28rpx;
  padding-left: 34rpx;
}
van-rate {
  padding-left: 25rpx;
}